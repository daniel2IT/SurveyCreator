@model IEnumerable<SurveyApplication.Models.Survey>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                Survey Name
            </th>
            <th>
                Analyser
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Analyser", "Details", new { id = item.SurveyId }) 
                </td>
            </tr>
        }
    </table>
</body>
</html>
